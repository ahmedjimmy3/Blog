<div class="author">
    <h1 class="author__heading">Search Results</h1>
</div>

<section class="articles">
    <ul class="article-ul">

        <% data.forEach(post => { %>

            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span><%= (post.createdAt instanceof Date ? post.createdAt.toDateString() : new Date(post.createdAt).toDateString()) %></span>
                </a>
            </li>

        <% }) %>

    </ul>
</section>